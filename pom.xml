	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<!-- maven-compiler-plugin -->
		<maven.compiler.target>1.8</maven.compiler.target>
		<maven.compiler.source>1.8</maven.compiler.source>

		<!-- other plugin versions -->
		<version.compiler.plugin>3.1</version.compiler.plugin>

		<!-- spring version -->
		<spring.version>5.3.27</spring.version>
		
		<!-- spring security version -->
		<spring.security.version>5.6.12</spring.security.version>

		<!-- lucene version -->
		<lucene.version>4.7.2</lucene.version>
        
        <!-- log4j version -->
        <log4j.version>2.17.1</log4j.version>
	</properties>

	<profiles>
		<profile>
			<id>dev</id>

			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>

			<build>
				<resources>
					<resource>
						<directory>profiles/dev</directory>
						<includes>
							<include>**/config/config.properties</include>
						</includes>
					</resource>
				</resources>
			</build>
		</profile>

		<profile>
			<id>production</id>

			<build>
				<resources>
					<resource>
						<directory>profiles/production</directory>
						<includes>
							<include>**/config/config.properties</include>
						</includes>
					</resource>
				</resources>

				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.6</version>
						<executions>
							<execution>
								<id>deploy-ui</id>
								<phase>package</phase>
								<inherited>false</inherited>
								<configuration>
									<target>
										<zip destfile="${project.build.directory}/static-package.zip"
											basedir="src/main/webapp" includes="css/** img/** js/**" />
										
										<zip destfile="${project.build.directory}/lucene-package.zip"
											basedir="." includes="lucene-package/**" />
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>

		</profile>

	</profiles>

